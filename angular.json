{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "core",
    "projects": {
        "orbit-jwt": {
            "root": "core/orbit-jwt",
            "sourceRoot": "core/orbit-jwt/src",
            "projectType": "library",
            "prefix": "",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-ng-packagr:build",
                    "options": {
                        "tsConfig": "core/orbit-jwt/tsconfig.lib.json",
                        "project": "core/orbit-jwt/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "core/orbit-jwt/tsconfig.lib.prod.json"
                        }
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "core/orbit-jwt/src/test.ts",
                        "tsConfig": "core/orbit-jwt/tsconfig.spec.json",
                        "karmaConfig": "core/orbit-jwt/karma.conf.js"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "core/orbit-jwt/tsconfig.lib.json",
                            "core/orbit-jwt/tsconfig.spec.json"
                        ],
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                }
            }
        }
    },
    "defaultProject": "orbit-jwt"
}
